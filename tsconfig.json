{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "sourceRoot": "src/",
    "outDir": "lib/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/index.ts", "src/ui.tsx"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
